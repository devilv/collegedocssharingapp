<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firebase">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/scrollres"
        android:layout_height="390dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="MBA"
        android:id="@+id/textview1"
        android:layout_gravity="center_horizontal"
        android:textSize="45sp"
        android:textColor="#bf9809"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="138dp"
            android:layout_height="138dp"
            android:background="@drawable/btn"
            app:srcCompat="@drawable/fetrial"
            android:layout_marginTop="35dp"
            android:id="@+id/imageButton19"
            android:layout_below="@+id/textview1"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="138dp"
            android:layout_height="138dp"
            app:srcCompat="@drawable/setrial"
            android:background="@drawable/btn"
            android:layout_marginTop="14dp"
            android:id="@+id/imageButton20"
            android:layout_below="@+id/imageButton19"
            android:layout_alignLeft="@+id/imageButton19"
            android:layout_alignStart="@+id/imageButton19" />

    </RelativeLayout>
    </ScrollView>

</LinearLayout>
