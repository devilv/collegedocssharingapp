<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firebase">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/scrollres"
            android:layout_height="675dp">

            <ImageButton
                android:layout_height="132dp"
                android:background="@drawable/btn"
                android:layout_marginTop="32dp"
                android:id="@+id/imageButton62"
                android:layout_width="132dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/syllabus" />

            <ImageButton
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:background="@drawable/btn"
                android:layout_marginTop="20dp"
                android:id="@+id/imageButton63"
                android:layout_below="@+id/imageButton62"
                android:layout_alignLeft="@+id/imageButton62"
                android:layout_alignStart="@+id/imageButton62"
                app:srcCompat="@drawable/notice" />

            <ImageButton
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:layout_marginTop="24dp"
               android:background="@drawable/btn"
                android:id="@+id/imageButton64"
                android:layout_below="@+id/imageButton63"
                android:layout_alignLeft="@+id/imageButton63"
                android:layout_alignStart="@+id/imageButton63"
                app:srcCompat="@drawable/assignment" />

            <ImageButton
                android:layout_width="132dp"
                android:layout_height="132dp"
                android:background="@drawable/btn"
                android:layout_marginTop="26dp"
                android:id="@+id/imageButton65"
                android:layout_below="@+id/imageButton64"
                android:layout_alignLeft="@+id/imageButton64"
                android:layout_alignStart="@+id/imageButton64"
                app:srcCompat="@drawable/notes" />
        </RelativeLayout>
    </ScrollView>


</LinearLayout>
