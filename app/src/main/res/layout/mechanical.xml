<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firebase">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/scrollres"
        android:layout_height="700dp">

        <ImageButton

            app:srcCompat="@drawable/fetrial"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginTop="49dp"
            android:id="@+id/imageButton12"
            android:layout_below="@+id/textview1"
            android:background="@drawable/btn"
            android:layout_alignLeft="@+id/textview1"
            android:layout_alignStart="@+id/textview1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Mech."
            android:id="@+id/textview1"
            android:layout_gravity="center_horizontal"
            android:textSize="45sp"
            android:textColor="#bf9809"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton

            app:srcCompat="@drawable/setrial"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:layout_marginTop="14dp"
            android:id="@+id/imageButton15"
            android:background="@drawable/btn"
            android:layout_below="@+id/imageButton12"
            android:layout_alignLeft="@+id/imageButton12"
            android:layout_alignStart="@+id/imageButton12" />

        <ImageButton

            app:srcCompat="@drawable/thirdyrtrial"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:background="@drawable/btn"
            android:layout_marginTop="15dp"
            android:id="@+id/imageButton16"
            android:layout_below="@+id/imageButton15"
            android:layout_alignLeft="@+id/imageButton15"
            android:layout_alignStart="@+id/imageButton15" />

        <ImageButton

            app:srcCompat="@drawable/ffourthyrtrial"
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:id="@+id/imageButton17"
            android:layout_marginTop="17dp"
            android:background="@drawable/btn"
            android:layout_below="@+id/imageButton16"
            android:layout_alignLeft="@+id/imageButton16"
            android:layout_alignStart="@+id/imageButton16" />
    </RelativeLayout>
    </ScrollView>

</LinearLayout>
