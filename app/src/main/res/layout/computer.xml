<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firebase">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/scrollres"
        android:layout_height="750dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="CSE"
            android:id="@+id/textview1"
            android:layout_gravity="center_horizontal"
            android:textSize="45sp"
            android:textColor="#bf9809"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="132dp"
            android:layout_height="132dp"
            app:srcCompat="@drawable/fetrial"
            android:background="@drawable/btn"
            android:layout_marginTop="41dp"
            android:id="@+id/imageButton7"
            android:layout_below="@+id/textview1"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:background="@drawable/btn"
            app:srcCompat="@drawable/setrial"
            android:layout_marginTop="31dp"
            android:id="@+id/imageButton10"
            android:layout_below="@+id/imageButton7"
            android:layout_alignLeft="@+id/imageButton7"
            android:layout_alignStart="@+id/imageButton7" />

        <ImageButton
            android:layout_width="132dp"
            android:layout_height="132dp"
            app:srcCompat="@drawable/thirdyrtrial"
            android:layout_marginTop="29dp"
            android:background="@drawable/btn"
            android:id="@+id/imageView"
            android:layout_below="@+id/imageButton10"
            android:layout_alignLeft="@+id/imageButton10"
            android:layout_alignStart="@+id/imageButton10" />

        <ImageButton
            android:layout_width="132dp"
            android:layout_height="132dp"
            app:srcCompat="@drawable/ffourthyrtrial"
            android:id="@+id/imageView4"
            android:background="@drawable/btn"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView" />
    </RelativeLayout>
</ScrollView>
</LinearLayout>
