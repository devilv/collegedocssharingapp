<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firebase">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/scrollres"
            android:layout_height="735dp">

            <ImageButton
                android:layout_width="132dp"
                android:background="@drawable/btn"
                android:layout_height="132dp"
                app:srcCompat="@drawable/endufinal"
                android:layout_marginTop="89dp"
                android:id="@+id/imageButton"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_below="@+id/textview1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="132dp"
                android:layout_height="132dp"
                app:srcCompat="@drawable/aboutusss"
                android:background="@drawable/btn"
                android:layout_marginTop="65dp"
                android:id="@+id/imageButton4"
                android:layout_below="@+id/imageButton"
                android:layout_alignLeft="@+id/imageButton"
                android:layout_alignStart="@+id/imageButton" />

            <ImageButton
                android:layout_width="132dp"
                android:layout_height="132dp"
                app:srcCompat="@drawable/genralnotices"
                android:background="@drawable/btn"
                android:id="@+id/imageButton5"
                android:layout_alignTop="@+id/imageButton4"
                android:layout_alignLeft="@+id/imageButton2"
                android:layout_alignStart="@+id/imageButton2" />

            <ImageButton
                android:layout_width="132dp"
                android:layout_height="132dp"
                app:srcCompat="@drawable/logoutt"
                android:background="@drawable/btn"
                android:layout_marginTop="64dp"
                android:id="@+id/imageButton6"
                android:layout_below="@+id/imageButton4"
                android:layout_alignLeft="@+id/textview1"
                android:layout_alignStart="@+id/textview1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Home"
                android:id="@+id/textview1"
                android:layout_gravity="center_horizontal"
                android:textSize="45sp"
                android:textColor="#bf9809"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="132dp"
                android:layout_height="132dp"
                app:srcCompat="@drawable/dissfinal"
                android:background="@drawable/btn"
                android:id="@+id/imageButton2"
                android:layout_marginRight="19dp"
                android:layout_marginEnd="19dp"
                android:layout_alignTop="@+id/imageButton"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
