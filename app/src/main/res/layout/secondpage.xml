<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/firebase"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/scrollres"
            android:layout_height="735dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Home"
                android:id="@+id/textview1"
                android:layout_gravity="center_horizontal"
                android:textSize="45sp"
                android:textColor="#bf9809"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                app:srcCompat="@drawable/cse"
                android:layout_marginTop="74dp"
                android:background="@drawable/btn"
                android:id="@+id/imageButton3"
                android:layout_marginLeft="27dp"
                android:layout_marginStart="27dp"
                android:layout_below="@+id/textview1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                app:srcCompat="@drawable/ece"
                android:id="@+id/imageButton8"
                android:background="@drawable/btn"
                android:layout_marginRight="22dp"
                android:layout_marginEnd="22dp"
                android:layout_alignTop="@+id/imageButton3"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                app:srcCompat="@drawable/mba"
                android:background="@drawable/btn"
                android:id="@+id/imageButton11"
                android:layout_alignTop="@+id/imageButton9"
                android:layout_alignLeft="@+id/imageButton8"
                android:layout_alignStart="@+id/imageButton8" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                app:srcCompat="@drawable/civil"
                android:background="@drawable/btn"
                android:id="@+id/imageButton9"
                android:layout_marginTop="83dp"
                android:layout_below="@+id/imageButton3"
                android:layout_alignLeft="@+id/imageButton3"
                android:layout_alignStart="@+id/imageButton3" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                app:srcCompat="@drawable/mech"
                android:background="@drawable/btn"
                android:id="@+id/imageButton13"
                android:layout_marginTop="77dp"
                android:layout_below="@+id/imageButton9"
                android:layout_alignLeft="@+id/imageButton9"
                android:layout_alignStart="@+id/imageButton9" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                app:srcCompat="@drawable/examinfo"
                android:id="@+id/imageButton14"
                android:background="@drawable/btn"
                android:layout_alignTop="@+id/imageButton13"
                android:layout_alignLeft="@+id/imageButton11"
                android:layout_alignStart="@+id/imageButton11" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
