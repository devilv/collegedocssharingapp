<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firebase">

    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/scrollres"
        android:layout_height="350dp">

        <ImageButton
            android:background="@drawable/btn"
            android:layout_width="132dp"
            android:layout_height="132dp"
            app:srcCompat="@drawable/seventhsem"
            android:layout_marginTop="23dp"
            android:id="@+id/imageButton50"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="132dp"
            android:layout_height="132dp"
            android:background="@drawable/btn"
            app:srcCompat="@drawable/finalsem"
            android:id="@+id/imageButton51"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/imageButton50"
            android:layout_alignLeft="@+id/imageButton50"
            android:layout_alignStart="@+id/imageButton50" />
    </RelativeLayout>
    </ScrollView>

</LinearLayout>
