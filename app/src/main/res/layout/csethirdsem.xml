<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firebase">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="18dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/scrollres"
            android:layout_height="950dp">

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:background="@drawable/btn"
                android:layout_marginTop="43dp"
                android:id="@+id/imageButton56"
                app:srcCompat="@drawable/syllabus"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:background="@drawable/btn"
                android:layout_marginTop="20dp"
                android:id="@+id/imageButton57"
                android:layout_below="@+id/imageButton56"
                android:layout_alignLeft="@+id/imageButton56"
                android:layout_alignStart="@+id/imageButton56"
                app:srcCompat="@drawable/notes" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:background="@drawable/btn"
                android:layout_marginTop="26dp"
                android:id="@+id/imageButton58"
                android:layout_below="@+id/imageButton57"
                android:layout_alignLeft="@+id/imageButton57"
                android:layout_alignStart="@+id/imageButton57"
                app:srcCompat="@drawable/assignment" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:background="@drawable/btn"
                android:layout_marginTop="37dp"
                android:id="@+id/imageButton60"
                android:layout_below="@+id/imageButton59"
                android:layout_alignLeft="@+id/imageButton59"
                android:layout_alignStart="@+id/imageButton59"
                app:srcCompat="@drawable/notice" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:background="@drawable/btn"
                android:id="@+id/imageButton61"
                android:layout_marginTop="33dp"
                android:layout_below="@+id/imageButton60"
                android:layout_alignLeft="@+id/imageButton60"
                android:layout_alignStart="@+id/imageButton60"
                app:srcCompat="@drawable/questionpaper" />

            <ImageButton
                android:layout_width="122dp"
                android:layout_height="122dp"
                android:background="@drawable/btn"
                android:layout_marginTop="31dp"
                android:id="@+id/imageButton59"
                android:layout_below="@+id/imageButton58"
                android:layout_alignLeft="@+id/imageButton58"
                android:layout_alignStart="@+id/imageButton58"
                app:srcCompat="@drawable/experiments" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>





